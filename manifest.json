{
  "manifest_version": 3,
  "name": "YTShortify",
  "version": "1.0",

  "description": "Removes the shorts section from any YouTube page.",

  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "nicola@n-bit.it"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["ytshortify.js"]
    }
  ]
}
